<Window x:Class="Meerkat.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meerkat"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <ListBox Height="350" Margin="20" ItemsSource="{ Binding Todos }">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{ Binding Done }"/>
                        <TextBlock Text="{ Binding Message }" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox x:Name="TodoMessageText" HorizontalAlignment="Left" Height="23" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="673" IsEnabled="{ Binding IsInsertMode }"/>
        <Button x:Name="AddTodoButton" Content="Add" HorizontalAlignment="Left" Margin="698,9,0,0" VerticalAlignment="Top" Width="75" Height="24" Command="{ Binding AddTodo }" IsEnabled="{ Binding IsInsertMode }"/>
    </Grid>
</Window>
